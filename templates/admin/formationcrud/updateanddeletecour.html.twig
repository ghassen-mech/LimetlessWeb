{% extends 'admin/index.html.twig' %}
{% block body %}
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Visualiser les Cour</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Courses Section ======= -->
    <section id="courses" class="courses">
        <div class="container" data-aos="fade-up">

            <div class="row" data-aos="zoom-in" data-aos-delay="100">
                {% for c in cour %}



                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="course-item">
                            <img src="{{ asset('assets/imagepi/'~ c.image)}} " class="img-fluid" alt="...">
                            <div class="course-content">

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3>{{ c.nom }}</h3>
                                    <a href="{{asset('assets/pdfpi/'~ c.extension)}}" download="{{ c.nom }}"> <h4>Download</h4></a>

                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">

                                    <td><a href="{{ path('Updatec',{'id':c.id}) }}">Modifier</a></td>
                                    <a href="{{ path('dc',{'id':c.id}) }}">Supprimer</a>

                                </div>



                            </div>
                        </div>
                    </div> <!-- End Course Item-->

                {% endfor %}

            </div>

        </div>
    </section><!-- End Courses Section -->
{% endblock %}